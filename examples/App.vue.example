<template>
  <div class="demo-container">
    <h1>Advanced Element UI 全局组件示例</h1>
    
    <!-- ✅ 全局注册后，可以直接使用组件，IDE 会提供完整的类型提示 -->
    
    <section>
      <h2>表格组件</h2>
      <ZwTable :columns="tableColumns" :data="tableData" />
    </section>

    <section>
      <h2>表单组件</h2>
      <ZwForm v-model="formModel" :schemas="formSchemas" />
    </section>

    <section>
      <h2>图标组件</h2>
      <div class="icon-list">
        <ZwIcon icon="ep:search" :size="24" />
        <ZwIcon icon="ep:edit" :size="24" color="#409eff" />
        <ZwIcon icon="ep:delete" :size="24" color="#f56c6c" />
      </div>
    </section>

    <section>
      <h2>编辑器组件</h2>
      <ZwEditor v-model="editorContent" mode="simple" :height="300" />
    </section>

    <section>
      <h2>上传组件</h2>
      <ZwUpload 
        v-model="fileList" 
        action="/api/upload"
        :limit="3"
      />
    </section>
  </div>
</template>

<script setup lang="ts">
import { ref } from 'vue'
// ✅ 导入类型定义，获得完整的类型提示
import type { 
  ZwTableColumn, 
  FormTypes,
  UploadFile 
} from 'advanced-ele-ui'

// 表格数据
const tableColumns: ZwTableColumn[] = [
  { field: 'name', label: '姓名', width: 120 },
  { field: 'age', label: '年龄', width: 80 },
  { field: 'address', label: '地址' }
]

const tableData = ref([
  { name: '张三', age: 25, address: '北京市朝阳区' },
  { name: '李四', age: 30, address: '上海市浦东新区' }
])

// 表单数据
const formModel = ref<Recordable>({})

const formSchemas: FormTypes.FormSchema[] = [
  {
    type: 'Inputer',
    component: 'Input',
    field: 'name',
    label: '姓名',
    componentProps: {
      placeholder: '请输入姓名'
    }
  },
  {
    type: 'Inputer',
    component: 'Input',
    field: 'email',
    label: '邮箱',
    componentProps: {
      placeholder: '请输入邮箱'
    }
  }
]

// 编辑器内容
const editorContent = ref('')

// 文件列表
const fileList = ref<UploadFile[]>([])
</script>

